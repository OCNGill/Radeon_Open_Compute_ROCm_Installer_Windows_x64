<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <ComponentGroup Id="PyTorchComponents">
      <ComponentRef Id="PyTorchScripts" />
      <ComponentRef Id="PythonEnvironment" />
      <ComponentRef Id="PyTorchShortcuts" />
    </ComponentGroup>

    <DirectoryRef Id="ScriptsFolder">
   <Component Id="PyTorchScripts" Guid="{12345678-90ab-cdef-1234-567890abcdef}">
  <!-- PyTorch installation scripts -->
<File Id="install_pytorch.sh" Source="..\src\scripts\install_pytorch.sh" KeyPath="yes" />
        <File Id="validate_installation.sh" Source="..\src\scripts\validate_installation.sh" />
      </Component>
    </DirectoryRef>

    <DirectoryRef Id="INSTALLFOLDER">
      <Directory Id="PythonEnvFolder" Name="python_env">
        <Component Id="PythonEnvironment" Guid="{abcdef12-3456-7890-abcd-ef1234567890}">
   <!-- Python environment configuration -->
   <File Id="environment.yml" Source="..\environment.yml" KeyPath="yes" />
   <File Id="requirements.txt" Source="..\requirements.txt" />
    
          <!-- Registry for Python environment -->
          <RegistryKey Root="HKLM" Key="Software\ROCm\Python">
          <RegistryValue Type="string" Name="EnvironmentFile" Value="[PythonEnvFolder]environment.yml" />
       <RegistryValue Type="string" Name="RequirementsFile" Value="[PythonEnvFolder]requirements.txt" />
          </RegistryKey>
        </Component>
</Directory>
    </DirectoryRef>

    <DirectoryRef Id="ApplicationProgramsFolder">
      <Component Id="PyTorchShortcuts" Guid="{fedcba98-7654-3210-fedc-ba9876543210}">
        <Shortcut Id="PythonWSLShortcut"
         Name="ROCm Python Environment"
      Description="Launch Python with ROCm support in WSL"
           Target="[WindowsFolder]System32\wsl.exe"
         Arguments="-d Ubuntu-22.04 python3"
       WorkingDirectory="INSTALLFOLDER" />

   <RemoveFolder Id="RemovePyTorchShortcuts" On="uninstall" />
<RegistryValue Root="HKCU" 
       Key="Software\ROCm\PyTorch" 
             Name="installed" 
          Type="integer" 
             Value="1" 
         KeyPath="yes" />
      </Component>
    </DirectoryRef>
  </Fragment>
</Wix>
